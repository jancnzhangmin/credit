<%= render 'layerbegin' %>


<style>
    .btn-transparent {
        background-color: transparent !important;
        border-color: transparent;
        color:#6fb3e0;
    }
</style>



<div class="page-content">
  <div class="page-header">
    <h1>
      用户
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">姓名</th>
                <th class="text-center">账号</th>
                <th class="text-center">交易账号</th>
                <th class="text-center">交易密码</th>
                <th class="text-center">注册时间</th>
                <th class="text-center">操作</th>



              </tr>
              </thead>

              <tbody>
              <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= user.login %>
                    </td>
                    <td>
                      <%= user.tranaccount %>
                    </td>
                    <td>
                      <%= user.tranpassword %>
                    </td>
                    <td>
                      <%= user.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
                    </td>
                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-warning" href=<%= user_bankcards_path(user) %>>
                          <i class="fa fa-credit-card bigger-120"></i>
                          银行卡
                        </a>
                        <a class="btn btn-xs btn-success" href=<%= user_withdrawrecords_path(user) %>>
                          <i class="fa fa-cny bigger-120"></i>
                          转账记录
                        </a>
                        <a class="btn btn-xs btn-primary" href=<%= edit_user_path(user) %>>
                          <i class="icon-edit bigger-120"></i>
                          编辑
                        </a>
                      </div>

                    </td>
                  </tr>
              <% end %>








              </tbody>
            </table>
          </div><!-- /.table-responsive -->



        </div><!-- /span -->
      </div><!-- /row -->

      <div data-turbolinks="false" class="text-center">
        <%= will_paginate @bankdefs, renderer: BootstrapPagination::Rails %>
      </div>



    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->



<% render 'layerend' %>