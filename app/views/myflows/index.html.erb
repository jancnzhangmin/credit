<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      待办工作
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">流程类型</th>
                <th class="text-center">流程名称</th>
                <th class="text-center">说明</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @flows.each do |flow| %>
                  <tr>
                    <td>
                      <% flowdef = flow.flowdef %>
                      <% if flowdef %>
                        <%= flowdef.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= flow.title %>
                    </td>
                    <td>
                      <%= flow.summary %>
                    </td>
                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= edit_flow_path(flow) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          办理
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>







<%= render 'layerend' %>