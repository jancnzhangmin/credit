<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      新建工作
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">审核部门</th>
                <th class="text-center">流程名称</th>
                <th class="text-center">状态</th>
                <th class="text-center" width="150px">操作</th>
              </tr>
              </thead>
              <tbody>
              <% @flowdefs.each do |flowdef| %>
                  <tr>
                    <td>
                      <% unionsector = flowdef.unionsector %>
                      <% if unionsector %>
                        <%= unionsector.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= flowdef.name %>
                    </td>
                    <td>
                      <%= flowdef.status %>
                    </td>
                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-primary" href=<%= new_flow_path(flowdef) %>>
                          <i class="fa fa-edit bigger-120"></i>
                          创建工作
                        </a>
                      </div>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>







<%= render 'layerend' %>